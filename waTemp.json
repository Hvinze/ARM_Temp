{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppname": {
            "type": "string",
            "metadata": {
                "description": "Web app name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "allowedValues": [
                "australiacentral",
                "australiaeast",
                "australiasoutheast",
                "brazilsouth",
                "canadacentral",
                "canadaeast",
                "centralindia",
                "centralus",
                "eastasia",
                "eastus",
                "eastus2",
                "francecentral",
                "germanywestcentral",
                "japaneast",
                "japanwest",
                "koreacentral",
                "northcentralus",
                "northeurope",
                "norwayeast",
                "southafricanorth",
                "southcentralus",
                "southindia",
                "southeastasia",
                "switzerlandnorth",
                "uaenorth",
                "uksouth",
                "ukwest",
                "westcentralus",
                "westeurope",
                "westindia",
                "westus",
                "westus2",
                "westus3"
            ],
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "appServicePlanName":{
            "type": "string",
            "metadata":{
                "description": "Name of the App Service Plan."
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "B1",
                "P1V2",
                "P1V3",
                "P2V2",
                "P2V3",
                "P3V2",
                "P3V3",
                "I1V2",
                "I2V2",
                "I3V2"
            ],
            "metadata": {
                "description": "The SKU of App Service Plan."
            }
        },
        "language": {
            "type": "string",
            "defaultValue": ".net",
            "allowedValues": [
                ".net",
                "php",
                "node",
                "html"
            ],
            "metadata": {
                "description": "The language stack of the app."
            }
        },
        "ServiceOwner": {
            "type": "String",
            "metadata": {
                "description": "The owner of resource."
            }
        },
        "Purpose": {
            "type": "String",
            "metadata": {
                "description": "Purpose of the resource."
            }
        },
        "CostCentre": {
            "type": "String",
            "metadata": {
                "description": "Cost Centre of the resource."
            }
        },
        "Department": {
            "type": "String",
            "metadata": {
                "description": "Department of the resource"
            }
        },
        "Environment": {
            "allowedValues": [
                "dev",
                "test",
                "pre-prod",
                "prod"
            ],
            "type": "String",
            "metadata": {
                "description": "The environment of the resource."
            }
        }
    },
    "variables": {
        "appServicePlanPortalName": "[parameters('appServicePlanName')]",
        "configReference": {
            ".net": {
                "comments": ".Net app. No additional configuration needed."
            },
            "html": {
                "comments": "HTML app. No additional configuration needed."
            },
            "php": {
                "phpVersion": "7.4"
            },
            "node": {
                "appSettings": [
                    {
                        "name": "WEBSITE_NODE_DEFAULT_VERSION",
                        "value": "12.15.0"
                    }
                ]
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppname')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('appServicePlanPortalName'))]"
            ],
            "properties": {
                "siteConfig": "[variables('configReference')[parameters('language')]]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
                "clientCertEnabled": true,
                "httpsOnly": false,
            },
            "tags": {
                "Owner": "[parameters('ServiceOwner')]",
                "Purpose": "[parameters('Purpose')]",
                "CostCentre": "[parameters('CostCentre')]",
                "Department": "[parameters('Department')]",
                "Enviornment": "[parameters('Environment')]"
            }
        },
        {
            "apiVersion": "2020-06-01",
            "name": "[variables('appServicePlanPortalName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('appServicePlanPortalName')]"
            },
            "tags": {
                "Owner": "[parameters('ServiceOwner')]",
                "Purpose": "[parameters('Purpose')]",
                "CostCentre": "[parameters('CostCentre')]",
                "Department": "[parameters('Department')]",
                "Enviornment": "[parameters('Environment')]"
            },
            "sku": {
                "name": "[parameters('sku')]"
            }
        }
    ]
}
